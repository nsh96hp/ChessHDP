<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#F4511E" />
            <gradient android:angle="-90" android:startColor="#DD2C00" android:endColor="#FF3D00"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#F4511E" />
            <solid android:color="#FF3D00"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#F4511E" />
            <gradient android:angle="-90" android:startColor="#FFAB91" android:endColor="#FF3D00" />
        </shape>
    </item>
</selector>